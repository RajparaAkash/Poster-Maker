<?xml version="1.0" encoding="utf-8"?>
<com.woxthebox.draglistview.swipe.ListSwipeItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_60sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="@dimen/_190sdp"
                android:layout_height="@dimen/_60sdp"
                android:background="@color/transparent">

                <ImageView
                    android:id="@+id/backimg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.8"
                    android:background="@color/gery_inactive" />

                <RelativeLayout
                    android:id="@+id/touch_rel"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_toLeftOf="@+id/img_lock">

                    <ImageView
                        android:id="@+id/layeradjust"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/poster_layer_adjust"
                        android:tint="@color/black" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/layeradjust"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_margin="6dp"
                            android:scaleType="fitCenter" />

                        <com.postermaker.flyerdesigner.creator.custom_view.Poster_TextView_ReSized
                            android:id="@+id/auto_fit_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="3dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginBottom="3dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13sdp" />
                    </RelativeLayout>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/img_lock"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/poster_btn_layer_lock"
                    android:tint="@color/black" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</com.woxthebox.draglistview.swipe.ListSwipeItem>
