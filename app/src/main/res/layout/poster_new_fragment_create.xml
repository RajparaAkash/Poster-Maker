<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvScratchList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_2sdp"
        android:layout_weight="1"
        />

    <RelativeLayout
        android:id="@+id/relativellout"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="?attr/actionBarSize"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:text="#Design Your Own Poster"
            android:textColor="#000000"
            android:textSize="25sp" />

    </RelativeLayout>

        <pl.bclogic.pulsator4droid.library.PulsatorLayout
            android:id="@+id/pulsator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:pulse_count="3"
            app:pulse_duration="3000"
            app:pulse_repeat="0"
            app:pulse_color="#3D66C7"
            app:pulse_startFromScratch="false"
            android:visibility="gone"
            app:pulse_interpolator="Linear">

            <ImageView
                android:id="@+id/iVCreate"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:src="@drawable/poster_ic_create_posters"
                android:contentDescription="TODO" />

        </pl.bclogic.pulsator4droid.library.PulsatorLayout>

</LinearLayout>